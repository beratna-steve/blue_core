<?xml version="1.0"?>

<!-- XML namespaces -->
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- ============================  link  ============================ -->
  <!-- Includes elbow flex, FA roll joints in macros below -->
  <xacro:macro name="blue_link_v2" params="side stage child reflect wrist:=0">
    <xacro:blue_roll_link_v2 side="${side}" stage="${stage}" reflect="${reflect}" wrist="${wrist}"/>
    <xacro:blue_lift_link_v2 side="${side}" stage="${stage}" child="${child}" reflect="${reflect}" />
  </xacro:macro>

  <xacro:macro name="blue_roll_link_v2" params="side stage reflect wrist">
    <link
      name="${side}_${stage}_roll_link">
      <inertial>
        <origin
          xyz="2.96915144581966E-07 -0.00817928723072138 0.120962910647003"
          rpy="0 0 0" />
        <mass
          value="0.37905420680448" />
        <inertia
          ixx="0.00156534155265803"
          ixy="7.86255262568044E-09"
          ixz="1.53529042690406E-08"
          iyy="0.00178123169436239"
          iyz="1.62349609777295E-06"
          izz="0.000959456942468469" />
      </inertial>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://blue_descriptions/meshes/roll_link_v2.STL" />
        </geometry>
        <material name="">
          <color rgba="1 1 1 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://blue_descriptions/meshes/roll_link_v2.STL" />
        </geometry>
      </collision>
    </link>

    <joint
      name="${side}_${stage}_lift_joint"
      type="revolute">
      <origin
        xyz="0 0.012 0.23278"
        rpy="1.5708 4.9887E-16 -1.5708" />
      <parent
        link="${side}_${stage}_roll_link"/>
      <child
        link="${side}_${stage}_lift_link"/>
      <axis
        xyz="0 0 1" />
      <limit
        lower="-2.2944"
        upper="0"
        effort="800"
        velocity="50" />
    </joint>

    <xacro:if value="${is_gazebo}">
      <transmission name="${side}_${stage}_lift_joint_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="${side}_${stage}_lift_joint">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="${side}_${stage}_lift_motor">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
          <mechanicalReduction>1</mechanicalReduction>
        </actuator>
      </transmission>
    </xacro:if>

    <link
      name="${side}_${stage}_accel_link"/>
    <joint
      name="${side}_${stage}_accel_joint"
      type="fixed">
      <origin
        xyz="-0.020008330615085 -0.000510000000000066 -0.111067108096273"
        rpy="1.5707963267949 0.328491802364426 5.16250107234938E-16" />
      <parent
        link="${side}_${stage}_roll_link" />
      <child
        link="${side}_${stage}_accel_link" />
      <axis
        xyz="0 0 0" />
    </joint>
  </xacro:macro>

  <xacro:macro name="blue_lift_link_v2" params="side stage child reflect">
    <link
      name="${side}_${stage}_lift_link">
      <inertial>
        <origin
          xyz="-3.66305969445868E-08 -0.000820052992464293 -6.62529991840577E-08"
          rpy="0 0 0" />
        <mass
          value="1.02342370509176" />
        <inertia
          ixx="0.00185674588732204"
          ixy="2.50286442134684E-09"
          ixz="-3.11007993614261E-09"
          iyy="0.00185731655609116"
          iyz="2.89693722882194E-09"
          izz="0.00152396319769825" />
      </inertial>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://blue_descriptions/meshes/lift_link_v2.STL" />
        </geometry>
        <material name="">
          <color rgba="0.116747 0.862745 1.0 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://blue_descriptions/meshes/lift_link_v2.STL" />
        </geometry>
      </collision>
    </link>

    <joint
      name="${side}_${stage}_roll_joint"
      type="revolute">
      <origin
        xyz="0 0.035953 0"
        rpy="1.5708 -3.8798E-16 -3.1416" />
      <parent
        link="${side}_${stage}_lift_link"/>
      <child
        link="${side}_${child}" />
      <axis
        xyz="0 0 1" />
      <limit
        lower="-2.6761"
        upper="2.6761"
        effort="800"
        velocity="50" />
    </joint>


    <xacro:if value="${is_gazebo}">
      <transmission name="${side}_${stage}_roll_joint_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="${side}_${stage}_roll_joint">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="${side}_${stage}_roll_motor">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
          <mechanicalReduction>1</mechanicalReduction>
        </actuator>
      </transmission>
    </xacro:if>

  </xacro:macro>
</robot>
