<?xml version="1.0"?>

<!-- XML namespaces -->
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- ============================  link  ============================ -->
  <!-- Includes elbow flex, FA roll joints in macros below -->
  <xacro:macro name="koko_link_v0" params="side stage child reflect wrist:=0">
    <xacro:koko_roll_link_v0 side="${side}" stage="${stage}" reflect="${reflect}" wrist="${wrist}"/>
    <xacro:koko_lift_link_v0 side="${side}" stage="${stage}" child="${child}" reflect="${reflect}" />
  </xacro:macro>

  <xacro:macro name="koko_roll_link_v0" params="side stage reflect wrist">
    <link
      name="${side}_${stage}_roll_link">
      <inertial>
        <origin
          xyz="0.00526385736219506 2.70691865020822E-05 -0.0641638075944594"
          rpy="0 0 0" />
        <mass
          value="${1.91396434922939 - 0.50028 * wrist}" />
        <inertia
          ixx="0.0057866591250737"
          ixy="3.71515699629511E-07"
          ixz="-6.32890111626103E-05"
          iyy="0.00530223654324281"
          iyz="8.9999884666805E-07"
          izz="0.00342399181200673" />
      </inertial>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://koko_description_sevendof/meshes/roll_link.STL" />
        </geometry>
        <material
          name="">
          <color
            rgba="1 1 1 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://koko_description_sevendof/meshes/roll_link.STL" />
        </geometry>
      </collision>
    </link>

    <joint
      name="${side}_${stage}_lift_joint"
      type="revolute">
      <origin
        xyz="-0.01143 0 -0.18056"
        rpy="-1.5708 4.4409E-16 3.1416" />
      <parent
        link="${side}_${stage}_roll_link"/>
      <child
        link="${side}_${stage}_lift_link"/>
      <axis
        xyz="0 0 1" />
      <limit
        lower="-2.2944"
        upper="0"
        effort="0"
        velocity="0" />
    </joint>
  </xacro:macro>

  <xacro:macro name="koko_lift_link_v0" params="side stage child reflect">
    <link
      name="${side}_${stage}_lift_link">
      <inertial>
        <origin
          xyz="-5.0083559080677E-06 0.000232928456050885 -1.77451392545103E-05"
          rpy="0 0 0" />
        <mass
          value="0.448307108622636" />
        <inertia
          ixx="0.000804272985961788"
          ixy="4.84548777859872E-08"
          ixz="2.09160815704306E-06"
          iyy="0.000818260636171894"
          iyz="-1.44954778549764E-08"
          izz="0.000550840705045094" />
      </inertial>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://koko_description_sevendof/meshes/lift_link.STL" />
        </geometry>
        <material
          name="">
          <color
            rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://koko_description_sevendof/meshes/lift_link.STL" />
        </geometry>
      </collision>
    </link>

    <joint
      name="${side}_${stage}_roll_joint"
      type="revolute">
      <origin
        xyz="0 0.070147 -6.25E-05"
        rpy="-1.5708 ${reflect*1.5673} -3.1416" />
      <parent
        link="${side}_${stage}_lift_link"/>
      <child
        link="${side}_${child}" />
      <axis
        xyz="0 0 1" />
      <limit
        lower="-2.6761"
        upper="2.6761"
        effort="0"
        velocity="0" />
    </joint>
  </xacro:macro>
</robot>
